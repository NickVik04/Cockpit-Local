@model List<Users>
@{
  ViewData["Title"] = "Home Page";
}
<div>
  <!-- Controller: Home ; Action: AddUser-->
  <a type="button" class="btn btn-success" asp-action="AddUser">Add</a>
</div>

<table class="table table-striped">
