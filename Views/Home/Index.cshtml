    @foreach (var user in Model)
    {
      <tr>
        <td>@user.UserName</td>
        <td>@user.EmailID</td>
        <td>@user.PhoneNumber</td>
        <td>@user.Address1</td>
        <td>@user.Address2</td>
        <td>@user.Country</td>
        <td>@user.State</td>
        <td>@user.PinCode</td>
        <td>@user.Brand</td>
        <td>@user.Stores</td>
        <td>@user.CockpitRoles</td>
        <td class ="row">
          <a type="button" class="btn btn-warning" asp-action="EditUser" asp-route-id="@user.ID">Edit</a>
         
        </td>
        <td class ="row">
         
          <a type="button" class="btn btn-danger" asp-action="Delete"  asp-route-id="@user.ID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>